<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_user"
        android:layout_width="40dp"
        android:layout_marginLeft="5dp"
        android:layout_height="40dp"
        android:src="@drawable/avt_default" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/avt_user"
        android:background="@drawable/background_chat_left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="hello"
        android:textSize="16sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_on"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="-10dp"
        android:layout_below="@id/avt_user"
        android:layout_toRightOf="@id/avt_user"
        android:background="@drawable/user_status_on" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_off"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="-10dp"
        android:layout_below="@id/avt_user"
        android:layout_toRightOf="@id/avt_user"
        android:background="@drawable/user_status_off" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/img_seen"
        android:visibility="gone"
        android:layout_toLeftOf="@id/message"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/message"/>

</RelativeLayout>