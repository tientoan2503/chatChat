<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_avt"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avt_default" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/user_avt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:textColor="@color/text_color"
        android:gravity="center_horizontal"
        android:maxEms="3"
        android:maxLines="2"
        android:textSize="10sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_status_on"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/user_avt"
        android:layout_marginLeft="-18dp"
        android:layout_marginTop="-14dp"
        android:layout_toRightOf="@id/user_avt"
        android:background="@drawable/user_status_on"
        android:visibility="gone" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_status_off"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/user_avt"
        android:layout_marginLeft="-18dp"
        android:layout_marginTop="-14dp"
        android:layout_toRightOf="@id/user_avt"
        android:background="@drawable/user_status_off"
        android:visibility="gone" />


    <TextView
        android:id="@+id/last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/user_avt"
        android:visibility="gone"
        android:textSize="11sp" />

</RelativeLayout>