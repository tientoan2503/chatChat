<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avt_user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/avt_default"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/img_seen"
            android:layout_toLeftOf="@id/img_seen"
            android:background="@drawable/background_chat_right"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="hello"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/status_on"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/avt_user"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="-10dp"
            android:layout_toRightOf="@id/avt_user"
            android:background="@drawable/user_status_on" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/status_off"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/avt_user"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="-10dp"
            android:layout_toRightOf="@id/avt_user"
            android:background="@drawable/user_status_off" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_seen"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/message"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />
    </RelativeLayout>
</RelativeLayout>